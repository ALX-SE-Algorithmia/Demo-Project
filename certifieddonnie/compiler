# Makefiles

# Compiler
CC = gcc

# Source Files
SRC = $(wildcard *.c)

# Object Files
OBJ = $(patsubst %.c, %.o, $(SRC))

# Header Files
HEA = $(wildcard *.h)
# Executable Name
NAME = calculator

# Commands
RM = rm -f

# Compiler Flags
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY : all clean oclean fclean re

# Default Target
all : $(HEA) $(OBJ)
	$(CC) $(OBJ) -o $(NAME) -lm

# Other Targets
# Deletes Executable
clean :
	$(RM) *~ $(NAME)

# deletes object files
oclean :
	$(RM) $(OBJ)

# deletes executable and deletes object files
fclean : clean oclean

# Deletes Object files and recompiles
re : oclean all

# Betty Linter Checks
betty :
	betty $(SRC)
